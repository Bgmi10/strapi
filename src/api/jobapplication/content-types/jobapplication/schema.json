{
  "kind": "collectionType",
  "collectionName": "jobapplications",
  "info": {
    "singularName": "jobapplication",
    "pluralName": "jobapplications",
    "displayName": "Job Application",
    "description": "Collection for job applications"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "jobtitle": {
      "type": "string",
      "required": true
    },
    "companyname": {
      "type": "string",
      "required": true
    },
    "yoe": {
      "type": "integer",
      "required": true
    },
    "skills": {
      "type": "json",
      "required": true
    },
    "skilllevel": {
      "type": "enumeration",
      "enum": ["Intermediate", "Beginner", "Advance"],
      "required": true
    },
    "resume": {
      "type": "text",
      "required": true
    },
    "userid": {
      "type": "string",
      "required": true
    },
    "job": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::postjob.postjob",
      "inversedBy": "applications"
    },
    "desc": {
      "type": "text"
    },
    "img": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Interviewing", "Applied", "Rejected", "Shortlisted"],
      "default": "Applied",
      "required": true
    }
  }
}
